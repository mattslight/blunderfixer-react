{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "types": ["node", "vite/client"],
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2020"],
    "skipLibCheck": true
  },
  "include": ["src", "vite-env.d.ts"]
}
