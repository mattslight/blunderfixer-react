{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"],
    "skipLibCheck": true
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
